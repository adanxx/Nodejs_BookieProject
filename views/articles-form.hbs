<div class="container dashboard">
    <div class="dash_body">
        
        <h1>Add article</h1>

        <form id="article_form">
            <div>
                <input type="text" name="title" id="title" placeholder="Add a title">
            </div>
            <div>
                <textarea type="text" name="review" id="review" placeholder="Add your Summary here"></textarea>
            </div>
            <div>
                <input type="text" name="rating" id="rating" placeholder="Add your rating from 1 to 10">
            </div>
            <button type="submit"> Add article </button>
        </form>
    </div>
</div>

<script src="/js/validate-articles.js"></script>
